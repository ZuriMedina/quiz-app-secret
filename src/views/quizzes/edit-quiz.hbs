{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    {{#if user.admin}}
    <div class="card-header">
      <h3>Edit Quiz</h3>
    </div>
    <div class="card-body">
      <form action="/quizzes/edit-quiz/{{quiz._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="title" class="form-control" value="{{quiz.title}}" required />
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" required>{{quiz.description}}</textarea>
        </div>

        <div class="form-group">
          <input type="text" name="quizone" class="form-control" value="{{quiz.quizone}}" required />
          <input type="text" name="quiztwo" class="form-control" value="{{quiz.quiztwo}}" required />
          <input type="text" name="quizthree" class="form-control" value="{{quiz.quizthree}}" required />
          <input type="text" name="quizfour" class="form-control" value="{{quiz.quizfour}}" required />
          <input type="text" name="correct" class="form-control" value="{{quiz.correct}}" required />
        </div>

        <div class="text-center">
          <p>Publish</p>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="customRadioInline1" name="published" class="custom-control-input" value="true"
              required>
            <label class="custom-control-label" for="customRadioInline1">Yes</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="customRadioInline2" name="published" class="custom-control-input" value="false"
              required>
            <label class="custom-control-label" for="customRadioInline2">No</label>
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
    {{else}}
    <div class="card-header">
      <h3>You don't have permission to be here</h3>
    </div>
    {{/if}}
  </div>
</div>