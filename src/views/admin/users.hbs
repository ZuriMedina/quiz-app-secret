<div class="row">
  {{#each usersAdmin}}
  <div class="col-md-3 pb-5">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ name }} <a href="/admin/edit/{{_id}}"><i class="fas fa-user-edit"></i></a>
        </h4>
        <p>{{ email }}</p>

        <form action="/admin/users/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm text-center"><i
              class="fas fa-trash"></i></a></button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There You don't have permission.</p>
      <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>